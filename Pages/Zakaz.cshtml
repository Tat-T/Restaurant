@page
@model MyRazorApp.Pages.ZakazModel
@{
    ViewData["Title"] = "Zakaz";
    Layout = "/Pages/Shared/_LayoutRest.cshtml";
}

<div class="zakaz mt-4 p-3 rounded-4 w-50" style="margin-left: 25%;">
 <button type="button" class="btn-close position-absolute top-0 end-0 m-3" style=" box-shadow: none;
    outline: none;" aria-label="Close" data-bs-dismiss="modal" onclick="history.back()">
    </button>
    <h3 class="text-center mb-2">Заказ столиков</h3>
    <form id="reservationForm">
        <div class="mb-2">
            <label class="form-label fw-semibold">Имя</label>
            <input type="text" id="name" class="form-control border border-secondary focus-ring focus-ring-dark" required>
        </div>
        <div class="mb-2">
            <label class="form-label fw-semibold">Email</label>
            <input type="email" id="email" class="form-control border border-secondary focus-ring focus-ring-dark" required>
        </div>
        <div class="mb-2">
            <label class="form-label fw-semibold">Телефон</label>
            <input type="tel" id="phone" class="form-control border border-secondary focus-ring focus-ring-dark" required>
        </div>

        <div class="mb-2">
            <label class="form-label fw-semibold">Выберите дату</label>
            <div id="datesContainer" class="mb-2"></div>
            <input type="hidden" id="selectedDate">
        </div>

        <div class="mb-2">
            <label class="form-label fw-semibold">Выберите время</label>
            <div id="timesContainer" class="mb-2"></div>
            <input type="hidden" id="selectedTime">
        </div>

        <div class="mb-2">
            <label class="form-label fw-semibold">Количество гостей</label>
            <input type="number" id="guests" min="1" value="1" class="form-control border border-secondary focus-ring focus-ring-dark" required>
        </div>

        <div class="mb-2">
            <label class="form-label fw-semibold">Дополнительно</label>
            <textarea id="message" class="form-control border border-secondary focus-ring focus-ring-dark" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-dark w-100">Забронировать столик</button>
    </form>
</div>

<script src="~/js/zakaz.js"></script>
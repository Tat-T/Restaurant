@page
@model LoginModel
@{
    ViewData["Title"] = "Вход";
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

}

<div class="container mt-5">
    <form method="post" class="container col-6 rounded p-3 mt-3 position-absolute top-50 start-50 translate-middle shadow-lg">
        <div class="row m-3">
            <h2 class="text-center">Вход</h2>
        </div>
        <div class="row mt-3">
            <div class="col-3"><label>Email</label></div>
            <div class="col-9"><input class="form-control border border-secondary focus-ring focus-ring-dark"
                    type="email" asp-for="Email" /></div>
        </div>
        <div class="row mt-3">
            <div class="col-3"><label>Пароль</label></div>
            <div class="col-9"><input class="form-control border border-secondary focus-ring focus-ring-dark"
                    type="password" asp-for="Password" /></div>
        </div>
        <div class="row mt-3">
            <button type="submit" class="btn btn-dark w-100">Войти</button>
        </div>
    </form>
</div>

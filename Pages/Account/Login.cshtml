@page
@model LoginModel
@{
    ViewData["Title"] = "Авторизация";
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<form method="post"
      class="container col-6 rounded p-3 mt-3 position-absolute top-50 start-50 translate-middle shadow-lg"
      novalidate>
    <button type="button" class="btn-close position-absolute top-0 end-0 m-3"
            style="box-shadow: none; outline: none;"
            aria-label="Close" data-bs-dismiss="modal"
            onclick="window.location.href='/Index';">
    </button>

    <div class="row m-3">
        <h2 class="text-center">Вход</h2>
    </div>

    <div class="row mt-3">
        <div class="col-3"><label asp-for="Email"></label></div>
        <div class="col-9">
            <input class="form-control border border-secondary focus-ring focus-ring-dark"
                   type="email" asp-for="Email" required />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-3"><label asp-for="Password"></label></div>
        <div class="col-9">
            <input class="form-control border border-secondary focus-ring focus-ring-dark"
                   type="password" asp-for="Password" required />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="d-grid mt-3">
        <button type="submit" class="btn btn-dark w-100">Войти</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

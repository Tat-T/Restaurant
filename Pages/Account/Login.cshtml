@page
@model LoginModel
@{
    ViewData["Title"] = "Вход";
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <form method="post"
        class="container col-6 rounded p-3 mt-3 position-absolute top-50 start-50 translate-middle shadow-lg">
        <div class="row m-3">
            <h2 class="text-center">Вход</h2>
        </div>
        <div class="row mt-3">
            <div class="col-3"><label>Email</label></div>
            <div class="col-9"><input class="form-control border border-secondary focus-ring focus-ring-dark"
            type="email" asp-for="Email" />
        </div>
        </div>
        <div class="row mt-3">
            <div class="col-3"><label>Пароль</label></div>
            <div class="col-9"><input class="form-control border border-secondary focus-ring focus-ring-dark"
            type="password" asp-for="Password" />  
                <div class="mt-3">
                    @if (!ViewData.ModelState.IsValid)
                    {
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p class="text-danger">@error.ErrorMessage</p>
                    }
                                
                    }
                </div>
            </div>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-dark w-100">Войти</button>
        </div>
    </form>
</div>

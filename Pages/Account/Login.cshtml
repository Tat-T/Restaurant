@page
@model LoginModel
@{
    ViewData["Title"] = "Авторизация";
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<form method="post"
    class="container col-6 rounded p-3 mt-3 position-absolute top-50 start-50 translate-middle shadow-lg">
    <button type="button" class="btn-close position-absolute top-0 end-0 m-3" style=" box-shadow: none;
    outline: none;" aria-label="Close" data-bs-dismiss="modal" onclick="window.location.href='/Index';">
    </button>
    <div class="row m-3">
        <h2 class="text-center">Вход</h2>
    </div>
    <div class="row mt-3">
        <div class="col-3"><label>Email</label></div>
        <div class="col-9"><input class="form-control border border-secondary focus-ring focus-ring-dark" type="email"
                asp-for="Email" />
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-3"><label>Пароль</label></div>
        <div class="col-9"><input class="form-control border border-secondary focus-ring focus-ring-dark"
                type="password" asp-for="Password" />
            <div class="mt-3">
                @if (!ViewData.ModelState.IsValid)
                {
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p class="text-danger">@error.ErrorMessage</p>
                    }

                }
            </div>
        </div>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-dark w-100">Войти</button>
    </div>
</form>

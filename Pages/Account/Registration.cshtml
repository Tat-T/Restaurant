@page
@model RegistrationModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <form method="post"
        class="container col-6 rounded p-3 mt-3 position-absolute top-50 start-50 translate-middle shadow-lg">
        <div class="row m-3">
            <h2 class="text-center">Регистрация</h2>
        </div>

        <div class="row mt-3">
            <div class="col-3"><label>Фамилия</label></div>
            <div class="col-9"><input class="form-control" type="text" asp-for="User.SurName" required /></div>
        </div>

        <div class="row mt-3">
            <div class="col-3"><label>Имя</label></div>
            <div class="col-9"><input class="form-control" type="text" asp-for="User.Name" required /></div>
        </div>

        <div class="row mt-3">
            <div class="col-3"><label>Отчество</label></div>
            <div class="col-9"><input class="form-control" type="text" asp-for="User.Patronomic" /></div>
        </div>

        <div class="row mt-3">
            <div class="col-3"><label>Логин</label></div>
            <div class="col-9"><input class="form-control" type="text" asp-for="User.Login" required /></div>
        </div>

        <div class="row mt-3">
            <div class="col-3"><label>Email</label></div>
            <div class="col-9"><input class="form-control" type="email" asp-for="User.Email" required /></div>
        </div>

        <div class="row mt-3">
            <div class="col-3"><label>Телефон</label></div>
            <div class="col-9"><input class="form-control" type="text" asp-for="User.Phone" /></div>
        </div>

        <div class="row mt-3">
            <div class="col-3"><label>Дата рождения</label></div>
            <div class="col-9"><input class="form-control" type="date" asp-for="User.Birthdate" /></div>
        </div>

        <div class="row mt-3">
            <div class="col-3"><label>Пароль</label></div>
            <div class="col-9"><input class="form-control" type="password" asp-for="User.Password" required /></div>
        </div>

        <div class="row mt-3">
            <div class="col-3"><label>Активен</label></div>
            <div class="col-9">
                <input type="checkbox" asp-for="User.IsActive" />
            </div>
        </div>

        <div class="d-grid mt-4">
            <button type="submit" class="btn btn-dark w-100">Зарегистрироваться</button>
        </div>

        <div class="mt-3">
            @if (!ViewData.ModelState.IsValid)
            {
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p class="text-danger">@error.ErrorMessage</p>
                }
            }
        </div>
    </form>
</div>

@page
@{
    ViewData["Title"] = "Регистрация";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<form id="registrationForm"
      class="container col-6 rounded p-3 mt-5 position-absolute top-50 start-50 translate-middle shadow-lg">
    <div class="row m-2">
        <button type="button" class="btn-close position-absolute top-0 end-0 m-3" style="box-shadow: none; outline: none;" 
                aria-label="Close" data-bs-dismiss="modal" onclick="window.location.href='/Index';">
        </button>
        <h2 class="text-center">Регистрация</h2>
    </div>

    <div class="row mt-3">
        <div class="col-3 fw-semibold"><label>Фамилия</label></div>
        <div class="col-9"><input class="form-control border border-secondary focus-ring focus-ring-dark" id="surName" required /></div>
    </div>

    <div class="row mt-3">
        <div class="col-3 fw-semibold"><label>Имя</label></div>
        <div class="col-9"><input class="form-control border border-secondary focus-ring focus-ring-dark" id="name" required /></div>
    </div>

    <div class="row mt-3">
        <div class="col-3 fw-semibold"><label>Отчество</label></div>
        <div class="col-9"><input class="form-control border border-secondary focus-ring focus-ring-dark" id="patronomic" /></div>
    </div>

    <div class="row mt-3">
        <div class="col-3 fw-semibold"><label>Логин</label></div>
        <div class="col-9"><input class="form-control border border-secondary focus-ring focus-ring-dark" id="userName" required /></div>
    </div>

    <div class="row mt-3">
        <div class="col-3 fw-semibold"><label>Email</label></div>
        <div class="col-9"><input class="form-control border border-secondary focus-ring focus-ring-dark" id="email" type="email" required /></div>
    </div>

    <div class="row mt-3">
        <div class="col-3 fw-semibold"><label>Телефон</label></div>
        <div class="col-9"><input class="form-control border border-secondary focus-ring focus-ring-dark" id="phoneNumber" /></div>
    </div>

    <div class="row mt-3">
        <div class="col-3 fw-semibold"><label>Пароль</label></div>
        <div class="col-9"><input class="form-control border border-secondary focus-ring focus-ring-dark" id="password" type="password" required /></div>
    </div>

    <div class="d-grid mt-3 mb-0">
        <button type="submit" class="btn btn-dark w-100">Зарегистрироваться</button>
    </div>

    <div class="mt-3" id="errors"></div>
</form>

@section Scripts {
    <script src="~/js/register.js"></script>
}

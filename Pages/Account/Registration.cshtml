@page
@model MyRazorApp.Pages.Account.RegistrationModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<form method="post"
      class="container col-6 rounded p-3 mt-5 position-absolute top-50 start-50 translate-middle shadow-lg">
    <div class="row m-2">
        <button type="button" class="btn-close position-absolute top-0 end-0 m-3" style="box-shadow: none; outline: none;" 
                aria-label="Close" data-bs-dismiss="modal" onclick="window.location.href='/Index';">
        </button>
        <h2 class="text-center">Регистрация</h2>
    </div>

    <div class="row mt-3">
        <div class="col-3 fw-semibold"><label asp-for="Input.SurName">Фамилия</label></div>
        <div class="col-9"><input class="form-control" asp-for="Input.SurName" required /></div>
    </div>

    <div class="row mt-3">
        <div class="col-3 fw-semibold"><label asp-for="Input.Name">Имя</label></div>
        <div class="col-9"><input class="form-control" asp-for="Input.Name" required /></div>
    </div>

    <div class="row mt-3">
        <div class="col-3 fw-semibold"><label asp-for="Input.Patronomic">Отчество</label></div>
        <div class="col-9"><input class="form-control" asp-for="Input.Patronomic" /></div>
    </div>

    <div class="row mt-3">
        <div class="col-3 fw-semibold"><label asp-for="Input.UserName">Логин</label></div>
        <div class="col-9"><input class="form-control" asp-for="Input.UserName" required /></div>
    </div>

    <div class="row mt-3">
        <div class="col-3 fw-semibold"><label asp-for="Input.Email">Email</label></div>
        <div class="col-9"><input class="form-control" asp-for="Input.Email" type="email" required /></div>
    </div>

    <div class="row mt-3">
        <div class="col-3 fw-semibold"><label asp-for="Input.PhoneNumber">Телефон</label></div>
        <div class="col-9"><input class="form-control" asp-for="Input.PhoneNumber" /></div>
    </div>

    <div class="row mt-3">
        <div class="col-3 fw-semibold"><label asp-for="Input.Password">Пароль</label></div>
        <div class="col-9"><input class="form-control" asp-for="Input.Password" type="password" required /></div>
    </div>

    <div class="d-grid mt-3 mb-0">
        <button type="submit" class="btn btn-dark w-100">Зарегистрироваться</button>
    </div>

    <div class="mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p class="text-danger">@error.ErrorMessage</p>
        }
    </div>
</form>

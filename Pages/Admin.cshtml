@page
@model MyRazorApp.Pages.RestaurantModel
@{
    ViewData["Title"] = "Home page";
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<div>
    <div class="row">
        <form action="#" method="post" class="container col-6 rounded p-3 mt-3 position-absolute top-50 start-50 translate-middle">

            <div class="row mt-3">
                <div class="col-3"><label class="form-label" for="login">Login:</label></div>
                <div class="col-9"><input id="login" name="login" class="form-control border border-secondary focus-ring focus-ring-dark" type="text"></div>
            </div>

            <div class="row mt-3">
                <div class="col-3"><label for="">Password:</label></div>
                <div class="col-9"><input id="password" name="password" class="form-control border border-secondary focus-ring focus-ring-dark" type="password"></div>
            </div>

            <div class="d-grid mt-3">
                <button type="submit" class="btn btn-dark w-100">Log on</button>
            </div>
        </form>
    </div>
</div>
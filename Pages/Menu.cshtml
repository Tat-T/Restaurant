@page
@model MyRazorApp.Pages.MenuModel
@{
    ViewData["Title"] = "Информация о ресторане";
    Layout = "/Pages/Shared/_LayoutRest.cshtml";
}
<div class="container rounded-4 mt-4">
    <h1 class="text-center mb-4">Меню</h1>

    <div class="row text-center vh-75">
        @foreach (var dish in Model.Dishes)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@(string.IsNullOrEmpty(dish.DishImage) ? Url.Content("~/image/no-photo.jpg") : dish.DishImage)" class="card-img-top h-75" alt="@dish.DishName">
                    <div class="card-body">
                        <h5 class="card-title">@dish.DishName</h5>
                        <p class="card-text">
    @string.Join(", ", dish.DishIngredients.Select(di => di.Ingredients.IngredientName))
</p>

                    </div>
                </div>
            </div>
        }
    </div>
</div>


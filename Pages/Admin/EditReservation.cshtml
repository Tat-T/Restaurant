@page
@model EditReservationModel
@{
    ViewData["Title"] = "Личный кабинет";
    Layout = "/Pages/Shared/_LayoutRest.cshtml";
}
<div class="zakaz mt-4 p-3 rounded-4 w-50" style="margin-left: 25%; overflow-y: auto;">
        <button type="button" class="btn-close position-absolute top-0 end-0 m-3" style=" box-shadow: none;
    outline: none;" aria-label="Close" data-bs-dismiss="modal"
        onclick="window.location.href='/Admin/ZakazAdmin';">
    </button>
    <h2 class="text-center mb-2">Редактирование заказа</h2>
    
    <form method="post">
        <input type="hidden" asp-for="Reservation.Id" />
    
        <div class="mb-3">
            <label class="form-label">Имя</label>
            <input asp-for="Reservation.Name" class="form-control border border-secondary focus-ring focus-ring-dark" />
        </div>
    
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Reservation.Email" class="form-control border border-secondary focus-ring focus-ring-dark" />
        </div>
    
        <div class="mb-3">
            <label class="form-label">Телефон</label>
            <input asp-for="Reservation.Phone" class="form-control border border-secondary focus-ring focus-ring-dark" />
        </div>
    
        <div class="mb-3">
            <label class="form-label">Дата</label>
            <input asp-for="Reservation.ReservationDate" type="date" class="form-control border border-secondary focus-ring focus-ring-dark" />
        </div>
    
        <div class="mb-3">
            <label class="form-label">Время</label>
            <input asp-for="Reservation.ReservationTime" class="form-control border border-secondary focus-ring focus-ring-dark" />
        </div>
    
        <div class="mb-3">
            <label class="form-label">Гости</label>
            <input asp-for="Reservation.Guests" class="form-control border border-secondary focus-ring focus-ring-dark" />
        </div>
    
        <div class="mb-3">
            <label class="form-label">Сообщение</label>
            <textarea asp-for="Reservation.Message" class="form-control border border-secondary focus-ring focus-ring-dark"></textarea>
        </div>
    
        <button type="submit" class="btn btn-dark">Сохранить</button>
        <a asp-page="/Admin/ZakazAdmin" class="btn btn-secondary">Отмена</a>
    </form>
</div>

@page
@{
    ViewData["Title"] = "Добавить блюдо";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5 p-3 rounded-4 w-50">
    <button type="button" class="btn-close position-absolute top-0 end-0 m-3"
            onclick="window.location.href='/Admin/MenuAdmin';">
    </button>
    <h2 class="text-center mb-2">Добавить блюдо</h2>

    <form id="addDishForm" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Название блюда</label>
            <input name="DishName" class="form-control border border-secondary focus-ring focus-ring-dark" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Цена</label>
            <input name="Price" type="number" step="0.01" class="form-control border border-secondary focus-ring focus-ring-dark" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Картинка</label>
            <input type="file" name="images" class="form-control border border-secondary focus-ring focus-ring-dark" />
        </div>

        <div class="mb-3">
            <label class="form-label">Ингредиенты (через запятую)</label>
            <input name="IngredientNames" class="form-control border border-secondary focus-ring focus-ring-dark" />
        </div>

        <button type="submit" class="btn btn-success">Добавить</button>
        <a href="/Admin/MenuAdmin" class="btn btn-secondary ms-2">Отмена</a>
    </form>
</div>

@section Scripts {
    <script src="~/js/addMenu.js"></script>
}

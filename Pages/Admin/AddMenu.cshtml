@page
@model AddMenuModel
@{
    ViewData["Title"] = "Добавить блюдо";
    Layout = "/Pages/Shared/_LayoutRest.cshtml";
}

<div class="container mt-5 p-3 rounded-4 w-50">
    <button type="button" class="btn-close position-absolute top-0 end-0 m-3" 
            style="box-shadow: none; outline: none;" 
            aria-label="Close" 
            onclick="window.location.href='/Admin/MenuAdmin';">
    </button>
    <h2 class="text-center mb-2">Добавить блюдо</h2>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success">@Model.StatusMessage</div>
    }

    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="DishInput.DishName" class="form-label">Название блюда</label>
            <input asp-for="DishInput.DishName" class="form-control border border-secondary focus-ring focus-ring-dark" />
            <span asp-validation-for="DishInput.DishName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DishInput.Price" class="form-label">Цена</label>
            <input asp-for="DishInput.Price" class="form-control border border-secondary focus-ring focus-ring-dark" />
            <span asp-validation-for="DishInput.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Картинка</label>
            <input type="file" asp-for="UploadImage" class="form-control border border-secondary focus-ring focus-ring-dark" />
        </div>

        <div class="mb-3">
            <label asp-for="DishInput.IngredientNames" class="form-label">Ингредиенты</label>
            <input asp-for="DishInput.IngredientNames" class="form-control border border-secondary focus-ring focus-ring-dark" />
            <span asp-validation-for="DishInput.IngredientNames" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Добавить</button>
        <a asp-page="/Admin/MenuAdmin" class="btn btn-secondary ms-2">Отмена</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

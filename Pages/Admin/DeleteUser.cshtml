@page "{id:int}"
@model MyRazorApp.Pages.Admin.DeleteUserModel
@{
    Layout = "/Pages/Shared/_LayoutRest.cshtml";
    ViewData["Title"] = "Удаление пользователя";
}

<div class="container mt-5">
    <h3>Удалить пользователя @Model.User?.UserName?</h3>
    <p>Вы действительно хотите удалить этого пользователя? Это действие нельзя отменить.</p>

    <form method="post">
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-page="/Admin/AdminUsers" class="btn btn-secondary">Отмена</a>
    </form>
</div>

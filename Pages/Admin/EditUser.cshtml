@page "{id:int}"
@{
    ViewData["Title"] = "Редактировать пользователя";
    Layout = "/Pages/Shared/_LayoutRest.cshtml";
}

<div class="container rounded-4 p-3 mt-3 w-50">
  <button type="button" class="btn-close position-absolute top-0 end-0 m-3"
          aria-label="Close" onclick="history.back()">
  </button>
  <h2 class="text-center">Редактировать пользователя</h2>

  <form id="editUserForm">
    <input type="hidden" id="UserId" value="@RouteData.Values["id"]" />

    <div>
      <label class="form-label fw-semibold">Фамилия</label>
      <input id="SurName" class="form-control border border-secondary focus-ring focus-ring-dark" />
    </div>

    <div>
      <label class="form-label fw-semibold">Имя</label>
      <input id="Name" class="form-control border border-secondary focus-ring focus-ring-dark" />
    </div>

    <div>
      <label class="form-label fw-semibold">Отчество</label>
      <input id="Patronomic" class="form-control border border-secondary focus-ring focus-ring-dark" />
    </div>

    <div>
      <label class="form-label fw-semibold">Логин</label>
      <input id="UserName" class="form-control border border-secondary focus-ring focus-ring-dark" />
    </div>

    <div>
      <label class="form-label fw-semibold">Пароль</label>
      <input id="NewPassword" type="password" class="form-control border border-secondary focus-ring focus-ring-dark" />
    </div>

    <div>
      <label class="form-label fw-semibold">Email</label>
      <input id="Email" class="form-control border border-secondary focus-ring focus-ring-dark" />
    </div>

    <div>
      <label class="form-label fw-semibold">Телефон</label>
      <input id="PhoneNumber" class="form-control border border-secondary focus-ring focus-ring-dark" />
    </div>

    <div>
      <label class="form-label fw-semibold">Дата рождения</label>
      <input id="Birthdate" type="date" class="form-control border border-secondary focus-ring focus-ring-dark" />
    </div>

    <div class="mb-3">
      <label class="form-label fw-semibold">Роль</label>
      <select id="IdRole" class="form-select border border-secondary focus-ring focus-ring-dark"></select>
    </div>

    <div class="mb-3 form-check">
      <input type="checkbox" id="IsActive" class="form-check-input bg-dark border border-secondary focus-ring focus-ring-dark" />
      <label class="form-check-label fw-semibold">Активен</label>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-dark">Сохранить</button>
      <a href="/Admin/AdminUsers" class="btn btn-secondary">Отмена</a>
    </div>
  </form>
</div>

@section Scripts {
    <script src="~/js/editUser.js"></script>
}

